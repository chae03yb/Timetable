{
    "name": "timetable",
    "version": "1.0.0",
    "description": "original: https://github.com/chae03yb/Timetable",
    "main": "src/server.js",
    "scripts": {
        "start": " nodemon ? exec ts-node src/server.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/chae03yb/timetable-with-Electron.git"
    },
    "author": {
        "name": "chae03yb",
        "email": "chae03yb@gmail.com"
    },
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/chae03yb/timetable-with-Electron/issues"
    },
    "homepage": "https://github.com/chae03yb/timetable-with-Electron#readme",
    "dependencies": {
        "express-handlebars": "^5.3.0",
        "hbs": "^4.1.1",
        "ts-node": "^9.1.1",
        "tslint": "^6.1.3",
        "typescript": "^4.2.4"
    },
    "devDependencies": {
        "@types/express": "^4.17.11",
        "@types/express-handlebars": "^3.1.0",
        "electron": "^11.1.1",
        "electron-builder": "^22.9.1",
        "express": "^4.17.1"
    },
    "build": {
        "productName": "Timetable",
        "appId": "com.chae03yb.timetable",
        "asar": true,
        "protocols": {
            "name": "timetable",
            "schemes": [
                "timetable"
            ]
        },
        "mac": {
            "target": [
                "default"
            ]
        },
        "win": {
            "target": [
                "zip",
                "nsis"
            ]
        },
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "rpm",
                "zip",
                "tar.gz"
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "directories": {
            "buildResources": "resources/installer/",
            "output": "dist/",
            "app": "."
        }
    }
}
